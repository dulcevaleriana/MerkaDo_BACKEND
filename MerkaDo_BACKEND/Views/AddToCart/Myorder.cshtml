@model IEnumerable < MerkaDo_BACKEND.Models.PRODUCTO__ > 
@{ 
    ViewBag.Title = "Myorder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    int sum = 0;
} 

<link rel = "stylesheet" href = "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> 
<script src = "https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js" > </script>
<script src = "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" > </script>
<div id="dvContents">
    <table class="table table-hover"
           width="100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombreProducto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.imagenProducto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cantidadProducto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.precioProducto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.precioAnterior)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.descripcionProducto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tablaNutricionalProductoIMG)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CATEGORIA_PRODUCTO.nombrecategoriaProducto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DESCUENTOS_1.descuentoId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SUCURSAL_.nombreSucursal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SUPERMERCADO_.nombreSupermercado)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <button id="btn_delete" class="label label-primary"
                            onclick="location.href='@Url.Action("Remove","AddToCart",new { item.productoId })'">
                        X
                    </button>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.imagenProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cantidadProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.precioProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.precioAnterior)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcionProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tablaNutricionalProductoIMG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CATEGORIA_PRODUCTO.nombrecategoriaProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DESCUENTOS_1.descuentoId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SUCURSAL_.nombreSucursal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SUPERMERCADO_.nombreSupermercado)
                </td>
            </tr>
        }
            </tbody>
            @foreach (var item in Model)
            {
                sum = Convert.ToInt32(item.precioProducto) + sum;
            }
            <tfoot>
                <tr>
                    <td> </td>
                    <td> </td>
                    <td>
                        <b> Total </b>
                    </td>
                    <td> @sum </td>   </tr>   
            </tfoot>   
        </table> 
</div>
